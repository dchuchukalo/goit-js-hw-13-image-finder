{{#each this}}
<li class="gallery--item">
    <div class="photo-card">
        <div class="photo-card--image-bg">
            <img class="photo-card--image" src="{{webformatURL}}" alt="" data-source="{{largeImageURL}}" />
        </div>


        <div class="stats">
            <p class="stats--item">
                <i class="material-icons stats--icon">thumb_up</i>
                {{likes}}
            </p>
            <p class="stats--item">
                <i class="material-icons stats--icon">visibility</i>
                {{views}}
            </p>
            <p class="stats--item">
                <i class="material-icons stats--icon">comment</i>
                {{comments}}
            </p>
            <p class="stats--item">
                <i class="material-icons stats--icon">cloud_download</i>
                {{downloads}}
            </p>
        </div>
    </div>
</li>
{{/each}}